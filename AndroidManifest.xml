<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="android.parkingcam" android:versionCode="1" android:versionName="1.0" >
    <uses-sdk android:minSdkVersion="16" android:targetSdkVersion="18" />

    <application android:allowBackup="true" android:icon="@drawable/icn_main_icon" android:label="@string/app_name" android:theme="@style/AppTheme" android:name=".AppContext">
        <activity android:name="android.parkingcam.ParkingCam" android:label="@string/menu_parking_cam" android:theme="@android:style/Theme.Translucent">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="android.parkingcam.camera.CameraCapture" 	android:label="@string/menu_camera_capture" android:theme="@android:style/Theme.Translucent" android:configChanges="orientation|keyboardHidden|keyboard|navigation"></activity>
        <activity android:name="android.parkingcam.map.ParkingMap" 			android:label="@string/menu_parking_map" 	android:theme="@android:style/Theme.Translucent" android:configChanges="orientation|keyboardHidden|keyboard|navigation"></activity>
        <activity android:name="android.parkingcam.manual.MainManual" 		android:label="@string/menu_manual" 		android:configChanges="orientation|keyboardHidden|keyboard|navigation"></activity>
        <activity android:name="android.parkingcam.common.Credits" 			android:label="@string/menu_credits" 		android:configChanges="orientation|keyboardHidden|keyboard|navigation"></activity>
        
        <!-- Widget Provider -->
        <receiver android:name="android.parkingcam.widget.ParkingWidgetProvider" android:label="@string/widget_parking">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
                <action android:name="android.appwidget.action.ACTION_IMG_CLICK"/>
                <action android:name="android.appwidget.action.ACTION_CLS_CLICK"/>
                <action android:name="android.appwidget.action.ACTION_GPS_CLICK"/>
            </intent-filter>
            <meta-data android:name="android.appwidget.provider" android:resource="@xml/parking_widget_provider"/>
        </receiver>
        
        <meta-data android:name="com.google.android.maps.v2.API_KEY" android:value="@string/google_maps_api_key"/>
   		<meta-data android:name="com.google.android.gms.version" android:value="@integer/google_play_services_version" />
    </application>
    
    <uses-feature android:glEsVersion="0x00020000" android:required="true"/>
    
	<permission android:name="android.parkingcam.parkingcam" android:protectionLevel="signatureOrSystem" />
	<permission android:name="android.parkingcam.permission.MAPS_RECEIVE" android:protectionLevel="signature"></permission>
    
    <uses-permission android:name="android.permission.READ_PHONE_STATE"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"></uses-permission>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>
    <uses-permission android:name="android.permission.CAMERA"/>
	<uses-permission android:name="android.permission.FLASHLIGHT"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    
	<uses-feature android:name="android.hardware.camera"/>
	<uses-feature android:name="android.hardware.camera.autofocus" android:required="false"/>
	<uses-feature android:name="android.hardware.camera.flash" android:required="false"/>
</manifest>
